<?xml version="1.0" encoding="UTF-8"?>
<session xmlns="http://www.appserver.io/appserver">
    <session-type>Singleton</session-type>
    <epb-name>ASingletonProcessor</epb-name>
    <epb-class>AppserverIo\Apps\Example\Services\ASingletonProcessor</epb-class>
    <init-on-startup>true</init-on-startup>
    <post-construct>
        <lifecycle-callback-method>initialize</lifecycle-callback-method>
    </post-construct>
    <pre-attach>
        <lifecycle-callback-method>attach</lifecycle-callback-method>
    </pre-attach>
    <post-detach>
        <lifecycle-callback-method>detach</lifecycle-callback-method>
    </post-detach>
</session>