<?xml version="1.0" encoding="UTF-8"?>
<session xmlns="http://www.appserver.io/appserver">
    <session-type>Stateless</session-type>
    <epb-name>SampleProcessor</epb-name>
    <epb-class>AppserverIo\Apps\Example\Services\SampleProcessor</epb-class>
    <local>SampleProcessorLocalInterface</local>
    <remote>SampleProcessorRemoteInterface</remote>
    <post-construct>
        <lifecycle-callback-method>initializeIt</lifecycle-callback-method>
    </post-construct>
    <pre-destroy>
        <lifecycle-callback-method>destroyIt</lifecycle-callback-method>
    </pre-destroy>
    <epb-ref>
        <epb-ref-name>UserProcessor</epb-ref-name>
        <remote>UserProcessorRemote</remote>
        <epb-link>UserProcessor</epb-link>
        <injection-target>
            <injection-target-class>AppserverIo\Apps\Example\Services\SampleProcessor
            </injection-target-class>
            <injection-target-property>userProcessor</injection-target-property>
        </injection-target>
    </epb-ref>
    <res-ref>
        <description>Reference to a servlet context</description>
        <res-ref-name>ServletContextInterface</res-ref-name>
        <injection-target>
            <injection-target-class>AppserverIo\Apps\Example\Services\SampleProcessor
            </injection-target-class>
            <injection-target-method>injectTimerService</injection-target-method>
            <injection-target-method-parameter-name>timerService</injection-target-method-parameter-name>
        </injection-target>
    </res-ref>
    <persistence-unit-ref>
        <persistence-unit-ref-name>ReferenceToMyNewPersistenceUnit</persistence-unit-ref-name>
        <persistence-unit-name>MyNewPersistenceUnit</persistence-unit-name>
        <injection-target>
            <injection-target-class>AppserverIo\Apps\Example\Services\NewSampleProcessor</injection-target-class>
            <injection-target-method>injectNewPersistenceUnit</injection-target-method>
            <injection-target-method-parameter-name>newPersistenceUnit</injection-target-method-parameter-name>
        </injection-target>
    </persistence-unit-ref>
</session>